
<!-- hex listing by jamesgoldie.dev, based on
  https://css-tricks.com/hexagons-and-beyond-flexible-responsive-grid-patterns-sans-media-queries\ -->

<style>
  .hex-listing-main {
    display: flex;
    --s: 100px;  /* size  */
    --m: 4px;   /* margin */
    --f: calc(var(--s) * 1.732 + 4 * var(--m) - 1px);
  }
  
  .hex-listing-container {
    font-size: 0; /* disable white space between inline block element */
  }

  .hex-listing-container::before {
    content: "";
    width: calc(var(--s)/2 + var(--m));
    float: left;
    height: 100%;
    shape-outside: repeating-linear-gradient(#0000 0 calc(var(--f) - 3px), #000 0 var(--f));
  }

  .hex-listing-item {
    width: var(--s);
    margin: var(--m);
    height: calc(var(--s) * 1.1547);
    display: inline-block;
    font-size: initial; /* we reset the font-size if we want to add some content */
    clip-path: polygon(0% 25%, 0% 75%, 50% 100%, 100% 75%, 100% 25%, 50% 0%);
    margin-bottom: calc(var(--m) - var(--s) * 0.2886); /* some negative margin to create overlap */
    background-color: lightgrey;
  }
</style>

<div class="hex-listing-main">
  <div class="hex-listing-container">
    <% for (const item of items) { %>
      <a href="<%- item.path %>">
        <div class="hex-listing-item">
          <%= item.title %>
        </div>
      </a>
    <% } %>
  </div>
</div>